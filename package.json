{
  "name": "macintacos_site",
  "version": "2.1.1",
  "description": "The website for macintacos.com",
  "scripts": {
    "build": "npm-run-all build:css build:html",
    "build:css": "postcss src/site/style/css/index.css -o src/site/style/build/index.css",
    "build:html": "eleventy",
    "clean": "rm -rf dist",
    "debug": "DEBUG=* eleventy",
    "release": "release-it",
    "start": "npm run watch",
    "watch": "npm-run-all --parallel watch:css watch:html",
    "watch:css": "postcss src/site/style/css/index.css -o src/site/style/build/index.css --watch",
    "watch:html": "eleventy --serve"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/macintacos/site"
  },
  "author": {
    "name": "Julian Torres",
    "email": "juliantorres@hey.com",
    "url": "https://macintacos.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/macintacos/site"
  },
  "homepage": "https://github.com/macintacos/site#README",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.3",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@campj/eleventy-fa-icons": "0.0.5",
    "@fullhuman/postcss-purgecss": "2.3.0",
    "auto-changelog": "2.2.0",
    "cssnano": "4.1.10",
    "eleventy-plugin-error-overlay": "0.1.2",
    "eslint": "7.7.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "luxon": "^1.25.0",
    "markdown-it": "^11.0.0",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-emoji": "1.4.0",
    "markdown-it-footnote": "3.0.2",
    "nunjucks": "~3.2.1",
    "postcss-cli": "7.1.1",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.1.0",
    "release-it": "^13.6.9",
    "uslug": "1.0.4"
  },
  "release-it": {
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    },
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
      "commit": false,
      "commitMessage": "ðŸš€ Release ${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "RELEASE_IT_GITHUB_TOKEN"
    },
    "npm": {
      "publish": false
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md}": "prettier --write",
    "*.{js,jsx}": "eslint --fix"
  },
  "dependencies": {
    "npm-run-all": "4.1.5",
    "postcss-import": "12.0.1",
    "tailwindcss": "1.7.3"
  }
}
