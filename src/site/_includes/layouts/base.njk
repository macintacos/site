<!doctype html>
<html class="min-h-full p-0 m-0" lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/style/build/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body class="min-h-full p-0 m-0">
    <div id="container" class="relative min-h-full">
      <header class="flex flex-wrap items-baseline bg-black md:items-center">
        <div class="flex justify-between flex-1 my-2 ml-4 text-3xl font-bold text-gray-200 line-through hover:no-underline">
          <a href="{{ '/' | url }}">{{ metadata.title }}</a>
        </div>

        <ul class="flex pr-5 text-lg divide-x-2 divide-gray-700 text-bold">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="pl-4 py my hover:no-underline">
              {% if entry.url == page.url %}
                <a href="{{ entry.url | url }}">{{ entry.title }}</a>
              {% else %}
                <a href="{{ entry.url | url }}">{{ entry.title }}</a>
              {% endif %}
            </li>
          {%- endfor %}
        </ul>
      </header>

      <main id="body"
        {% if templateClass %}
            style="padding-bottom: 120px;"
            class="mx-4 sm:m-auto my-0 max-w-2xl bg-grey-100 {{ templateClass }}"
        {% endif %}>
        {{ content | safe }}
      </main>

      <footer class="absolute bottom-0 w-full pt-8 pb-20 text-center text-white bg-black"
              style="height: 60px; box-shadow: 0 50vh 0 50vh #000">
        <a href="mailto:julian.m.tor@gmail.com">
          {% FontAwesomeIcon
            name = "internet-explorer",
            type = "brand",
            class = "px-4 text-blue-400 font-awesome-brand-icon"
          %}
        </a>
        <a href="https://github.com/macintacos">
          {% FontAwesomeIcon
            name = "github-alt",
            type = "brand",
            class = "px-4 font-awesome-brand-icon"
          %}
        </a>
        <a href="https://twitter.com/macintacos">
          {% FontAwesomeIcon
            name = "twitter",
            type = "brand",
            class = "px-4 text-blue-400 font-awesome-brand-icon"
          %}
        </a>
      </footer>

      {# Current page: {{ page.url | url }} #}
    </div>
  </body>
</html>