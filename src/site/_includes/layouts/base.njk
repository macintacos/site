<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/style/build/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/style/build/font-awesome/all.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/style/build/prism-dracula.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <header class="flex border-b-2 border-gray-400 border-dashed">
      <h1 class="my-4 ml-4 mr-8 text-lg font-bold line-through">
        <a href="{{ '/' | url }}">{{ metadata.title }}</a>
      </h1>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="flex">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="my-4 mr-3">
            <a class="text-lg {% if entry.url == page.url %} font-bold {% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
          </li>
        {%- endfor %}
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    {# Current page: {{ page.url | url }} #}
  </body>
</html>