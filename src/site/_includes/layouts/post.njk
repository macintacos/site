---
layout: layouts/base.njk
templateClass: tmpl-post
---
<div class="pt-12 pb-8 leading-7 sm:pt-16">
    <div class="text-4xl font-bold leading-9">{{ title }}</div>
    <time class="text-lg postlist-date" datetime="{{ date | htmlDateString }}">posted: {{ date | readableDate }}</time>
</div>

{{ content | safe }}

<p>
    <a href="{{ '/' | url }}">← Home</a>
</p>