<ol reversed class="m-4 postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
  {% for post in postslist | reverse %}
    <li class="postlist-item {% if post.url == url %}postlist-item-active{% endif %}">
      <a href="{{ post.url | url }}" class="text-xl font-bold leading-10 postlist-link hover:line-through">
        {% if post.data.title %}
          {{ post.data.title }}
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
      </a>
      <time class="mx-2 postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>

      {% if post.data.description %}
        <div class="block pb-3 pl-6">
          {{ post.data.description }}
        </div>
      {% endif %}

      <div class="block pb-4 pl-5">
        {% for tag in post.data.tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="px-3 py-1 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full hover:bg-gray-400 tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </div>
    </li>
  {% endfor %}
</ol>